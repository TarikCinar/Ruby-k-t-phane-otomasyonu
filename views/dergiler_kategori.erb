<body>

<div id="colorlib-page">
  <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
  <aside id="colorlib-aside" role="complementary" class="js-fullheight">
    <nav id="colorlib-main-menu" role="navigation">
      <ul>
        <li ><a href="/">Anasayfa</a></li>
        <% if @giris_yapilmismi %>
          <li><a href="/profil">Profil</a></li>
        <%end %>
        <li ><a href="/kitaplar">Kitaplar</a></li>
        <li class="colorlib-active"><a href="/dergiler">Dergiler</a></li>
        <li><a href="/e-kitaplar">E-kitaplar</a></li>
        <li><a href="/iletisim">İletişim</a></li>
        <% if not @giris_yapilmismi %>
          <li><a href="/login">Giriş yap</a></li>
          <li><a href="/kayit">Kayıt ol</a></li>
        <%else %>
          <li><a href="/logout">Çıkış yap</a></li>
        <% end %>

      </ul>
    </nav>

    <div class="colorlib-footer">
      <h1 id="colorlib-logo" class="mb-4"><a href="/" style="background-image: url(images/bg_1.jpg); font-size: 50px;margin-bottom: 50px">Ruby <span>Library</span></a></h1>
    </div>
  </aside> <!-- END COLORLIB-ASIDE -->
  <div id="colorlib-main" >
    <section class="ftco-section ftco-no-pt ftco-no-pb">
      <div class="container">
        <div class="row flex-row flex-nowrap">
          <div class="col-lg-8 py-5 px-md-5" >
            <div class="container-fluid" style="margin-left: 20px">
              <div class="row">
                <% @dergiler.each do |i| %>
                  <div class="col-lg-3" style="margin:30px">
                    <div class="row justify-content-lg-center">
                      <div class="card shadow" style="width: 15rem;height: 30rem">
                        <a  href='/dergi-icerigi/<%= i[7] %>'>
                          <img class="card-img-top shadow" src="/dergi_image/<%=i[1] %>" alt="Card image cap" style="padding: 10px">
                        </a>
                        <div class="card-body" style="text-align: center;">
                          <h5 class="card-title"style="font-size: 15px"><%= i[2] %> </h5>
                          <p class="card-text"><%= i[4] %> </p>
                          <form method="POST" action="/dergi-al">
                            <label style="display: none">
                              <input name="id" value="<%=i[0] %>">
                            </label>
                            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Okumak için al</button>
                          </form>-
                        </div>
                      </div>
                    </div>
                  </div>
                <%end %>
              </div>
            </div>
          </div>
          <div class="col-lg-4 sidebar ftco-animate bg-light pt-5">
            <div class="sidebar-box pt-md-4">
              <form action="#" class="search-form">
                <div class="form-group">
                  <span class="icon icon-search"></span>
                  <input type="text" class="form-control" placeholder="Kitap arayın">
                </div>
              </form>
            </div>
            <div class="sidebar-box ftco-animate">
              <h3 class="sidebar-heading">Kategoriler</h3>
              <ul class="categories">
                <li><a href="/dergiler">Tüm Dergiler <span>> </span></a></li>
                <li><a href="/dergi/category/bilim">bilim <span>> </span></a></li>
                <li><a href="/dergi/category/uzay">Uzay <span>> </span></a></li>
                <li><a href="/dergi/category/magazin">Magazin <span>> </span></a></li>
                <li><a href="/dergi/category/tarih">Tarih <span>> </span></a></li>
                <li><a href="/dergi/category/bilmece">Bilmece <span>> </span></a></li>
                <li><a href="/dergi/category/cografya">Coğrafya <span>> </span></a></li>
              </ul>
            </div>

          </div><!-- END COL -->
        </div>
      </div>
    </section>
  </div><!-- END COLORLIB-MAIN -->
</div><!-- END COLORLIB-PAGE -->

